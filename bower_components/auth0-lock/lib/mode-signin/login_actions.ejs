<div class="a0-create-account a0-buttons-actions">
  <% if (locals.showCancel) { %>
  <a href="<%= locals.cancelLink || 'javascript: {}' %>"
    class="a0-cancel  a0-btn-small"><%= i18n.t('signin:cancelAction') %></a>
  <% } %>
  <% if (showSignupAction) { %>
  <a href="<%= locals.signupLink || 'javascript: {}' %>"
    class="a0-sign-up a0-switch a0-clearfix">
    <span class="a0-active">
      <%= i18n.t('signin:title') %>
    </span>
    <span>
      <%= i18n.t('signin:signupText') %>
    </span>
  </a>
  <% } %>
  <% if (showSignupAction && showResetAction) { %>
  <span class="a0-divider"></span>
  <% } %>
</div>
